<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:id="@+id/frag03_shop_shopcar_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/frag03_shop_shopcar_name"
        android:layout_toRightOf="@+id/frag03_shop_shopcar_checkBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:padding="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:text="店家一" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_shopcar"
        android:layout_below="@+id/frag03_shop_shopcar_checkBox"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
